[Mesh]
    type = GeneratedMesh
    dim = 2
    nx = 2
    ny = 2
    xmin = 0
    xmax = 1
    ymin = 0
    ymax = 1
    elem_type = QUAD4

  []
  
  [Variables]
    [./u]
      order = FIRST
      family = MONOMIAL
      [./InitialCondition]
        type = ConstantIC
        value = 1
      [../]
    [../]
  []
  
  [Functions]
    [./forcing_fn]
      type = ParsedFunction
      expression = 2*pow(e,-x-(y*y))*(1-2*y*y)
    [../]
    [./exact_fn]
      type = ParsedGradFunction
      expression = pow(e,-x-(y*y))
      grad_x = -pow(e,-x-(y*y))
      grad_y = -2*y*pow(e,-x-(y*y))
    [../]
  []
  
  [Kernels]
    [./diff]
      type = Diffusion
      variable = u
    [../]
    [./abs]
      type = Reaction
      variable = u
    [../]
    [./forcing]
      type = BodyForce
      variable = u
      function = forcing_fn
    [../]
  []
  
  [DGKernels]
    [./dg_diff]
      type = DGDiffusion
      variable = u
      epsilon = -1
      sigma = 6
    [../]
  []
  
  [BCs]
    [./all]
      type = DGFunctionDiffusionDirichletBC
      variable = u
      boundary = '0 1 2 3'
      function = exact_fn
      epsilon = -1
      sigma = 6
    [../]
  []
  
  [Materials]
    [./stateful]
      type = StatefulMaterial
      initial_diffusivity = 1
      boundary = 'left'
    [../]
    [./general]
      type = GenericConstantMaterial
      block = '0'
      prop_names = 'dummy'
      prop_values = '1'
    [../]
  []
  
  [Executioner]
    type = Steady
    solve_type = 'PJFNK'
    nl_rel_tol = 1e-10
  []